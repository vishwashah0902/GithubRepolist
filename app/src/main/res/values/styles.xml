<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/bg_gradient_end</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="WideDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="autoCompleteDropdownParent" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="startIconTint">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="editTextParent" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="startIconTint">@color/colorPrimaryDark</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="toggleBarButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="deleteButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="toggleBarHeadText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toggleBarPreviewImageText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details_subheading">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:titleMarginBottom">28dp</item>
        <item name="android:textColor">#8a000000</item>
    </style>

    <style name="details_body">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:titleMarginBottom">24dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">#ECEFF1</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="ListItemTitleText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <attr name="listSeparatorTextViewStyle" format="reference" />
</resources>